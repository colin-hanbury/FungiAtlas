<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/RelativeLayout1"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NewObservation">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fungi Attributes"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <TextView android:id="@+id/textCapShape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Cap Shape:" />
            <Spinner
                android:id="@+id/spinnerCapShape"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/textbox_border"
                android:spinnerMode="dropdown"
                android:tag="Cap_Shape"/>

            <TextView android:id="@+id/textCapSurface"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Cap Surface:" />
            <Spinner
                android:id="@+id/spinnerCapSurface"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/textbox_border"
                android:spinnerMode="dropdown"
                android:tag="Cap_Surface"/>

            <TextView android:id="@+id/textCapColour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Cap Colour:" />
            <Spinner
                android:id="@+id/spinnerCapColour"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/textbox_border"
                android:spinnerMode="dropdown"
                android:tag="Cap_Colour"/>

            <TextView android:id="@+id/textBruises"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Bruises:" />
            <Spinner
                android:id="@+id/spinnerBruises"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/textbox_border"
                android:spinnerMode="dropdown"
                android:tag="Bruises"/>

            <TextView android:id="@+id/textOdor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Odor:" />
            <Spinner
                android:id="@+id/spinnerOdor"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/textbox_border"
                android:spinnerMode="dropdown"
                android:tag="Odor"/>

            <TextView android:id="@+id/textGillAttachment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Gill Attachment:" />
            <Spinner
                android:id="@+id/spinnerGillAttachment"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/textbox_border"
                android:spinnerMode="dropdown"
                android:tag="Gill_Attachment"/>

            <TextView android:id="@+id/textGillSpacing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Gill Spacing:" />
            <Spinner
                android:id="@+id/spinnerGillSpacing"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/textbox_border"
                android:spinnerMode="dropdown"
                android:tag="Gill_Spacing"/>

            <TextView android:id="@+id/textGillSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Gill Size:" />
            <Spinner
                android:id="@+id/spinnerGillSize"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/textbox_border"
                android:spinnerMode="dropdown"
                android:tag="Gill_Size"/>

            <TextView android:id="@+id/textGillColour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Gill Colour:" />
            <Spinner
                android:id="@+id/spinnerGillColour"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/textbox_border"
                android:spinnerMode="dropdown"
                android:tag="Gill_Colour"/>

            <TextView android:id="@+id/textStalkShape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Stalk Shape:" />
            <Spinner
                android:id="@+id/spinnerStalkShape"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/textbox_border"
                android:spinnerMode="dropdown"
                android:tag="Stalk_Shape"/>

            <TextView android:id="@+id/textStalkRoot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Stalk Root:" />
            <Spinner
                android:id="@+id/spinnerStalkRoot"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/textbox_border"
                android:spinnerMode="dropdown"
                android:tag="Stalk_Root"/>

            <TextView android:id="@+id/textStalkSurfaceAboveRing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Stalk Surface Above Ring:" />
            <Spinner
                android:id="@+id/spinnerStalkSurfaceAboveRing"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/textbox_border"
                android:spinnerMode="dropdown"
                android:tag="Stalk_Surface_Above_Ring"/>

            <TextView android:id="@+id/textStalkSurfaceBelowRing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Stalk Surface Below Ring:" />
            <Spinner
                android:id="@+id/spinnerStalkSurfaceBelowRing"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/textbox_border"
                android:spinnerMode="dropdown"
                android:tag="Stalk_Surface_Below_Ring"/>

            <TextView android:id="@+id/textStalkColourAboveRing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Stalk Colour Above Ring:" />
            <Spinner
                android:id="@+id/spinnerStalkColourAboveRing"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/textbox_border"
                android:spinnerMode="dropdown"
                android:tag="Stalk_Colour_Above_Ring"/>

            <TextView android:id="@+id/textStalkColourBelowRing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Stalk Colour Below Ring:" />
            <Spinner
                android:id="@+id/spinnerStalkColourBelowRing"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/textbox_border"
                android:spinnerMode="dropdown"
                android:tag="Stalk_Colour_Below_Ring"/>

            <TextView android:id="@+id/textVeilType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Veil Type:" />
            <Spinner
                android:id="@+id/spinnerVeilType"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/textbox_border"
                android:spinnerMode="dropdown"
                android:tag="Veil_Type"/>

            <TextView android:id="@+id/textVeilColour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Veil Colour:" />
            <Spinner
                android:id="@+id/spinnerVeilColour"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/textbox_border"
                android:spinnerMode="dropdown"
                android:tag="Veil_Colour"/>

            <TextView android:id="@+id/textRingNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Ring Number:" />
            <Spinner
                android:id="@+id/spinnerRingNumber"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/textbox_border"
                android:spinnerMode="dropdown"
                android:tag="Ring_Number"/>

            <TextView android:id="@+id/textRingType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Ring Type:" />
            <Spinner
                android:id="@+id/spinnerRingType"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/textbox_border"
                android:spinnerMode="dropdown"
                android:tag="Ring_Type"/>

            <TextView android:id="@+id/textPopulation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Population:" />
            <Spinner
                android:id="@+id/spinnerPopulation"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/textbox_border"
                android:spinnerMode="dropdown"
                android:tag="Population"/>

            <TextView android:id="@+id/textHabitat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Habitat:" />
            <Spinner
                android:id="@+id/spinnerHabitat"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/textbox_border"
                android:spinnerMode="dropdown"
                android:tag="Habitat"/>

            <Button
                android:id="@+id/buttonSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textAlignment="center"/>
        </LinearLayout>
</ScrollView>